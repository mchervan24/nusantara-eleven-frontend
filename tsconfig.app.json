// tsconfig.node.json
{
  "compilerOptions": {
    "composite": true, // Pastikan ini true
    "module": "ESNext",
    "moduleResolution": "bundler", // Ubah ke "bundler"
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "isolatedModules": true,
    // "noEmit": true, // HAPUS BARIS INI (atau ubah menjadi false)
    "types": ["node"] // Pertahankan ini karena Anda sudah menginstal @types/node
  },
  "include": ["vite.config.ts"] // Umumnya hanya perlu ini untuk Vite
  // Jika Anda punya setupProxy.js, tambahkan: "src/setupProxy.js"
}